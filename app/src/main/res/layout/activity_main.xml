<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.gyjl.superweibo.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"/>
    <Button
        android:text="请求图片分类"
        android:onClick="btnGetClassify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="获取分类中的图片列表"
        android:onClick="btnGetList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="获取服务器版本号"
        android:onClick="btnGetVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="提交POST请求"
        android:onClick="btnPostLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="提交PUT请求"
        android:onClick="btnPutJson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="文件上传"
        android:onClick="btnUploadFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="获取授权"
        android:onClick="btnGets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
